{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-tests",
            "type": "shell",
            "command": "cargo",
            "args": [
                "test",
                "--no-run",
                "-- --nocapture"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cargo",
            "command": "test",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test",
            "label": "rust: cargo test"
        }
    ]
}